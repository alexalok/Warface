<ammo name="bullet_helicopter_rlai" class="HomingMissile">
	<icons>
		<combatlog icon="KA52_combatLog"/>
	</icons>
	<geometry>
		<firstperson name="Objects\props\missile\stinger.cgf" angles="-90, 0, 0" scale="1"/>
	</geometry>
	<trail>
		<param name="effect" value="rocket_trails.trail_ai"/>
		<param name="prime" value="false"/>
	</trail>
	<flags>
		<param name="serverspawn" value="1"/>
		<param name="predictspawn" value="0"/>
	</flags>
	<physics type="particle">
		<param name="mass" value="100"/>
		<param name="speed" value="60"/>
		<param name="radius" value="0.125"/>
		<param name="air_resistance" value="0"/>
		<param name="water_resistance" value="0.5"/>
		<param name="gravity" value="0, 0, 0"/>
		<param name="water_gravity" value="0, 0, -0.1"/>
		<param name="thrust" value="0"/>
		<param name="lift" value="0"/>
		<param name="min_bounce_speed" value="8"/>
		<param name="material" value="mat_metal"/>
		<param name="spin_random" value="0, 0, 0"/>
		<param name="single_contact" value="1"/>
		<param name="pierceability" value="14"/>
	</physics>
	<explosion>
		<param name="pressure" value="400"/>
		<param name="min_radius" value="1"/>
		<param name="max_radius" value="4"/>
		<param name="min_phys_radius" value="1"/>
		<param name="max_phys_radius" value="3"/>
		<param name="hole_size" value="2"/>
		<param name="terrain_hole_size" value="3"/>
		<param name="decal" value="textures/decal/explo_decal.dds"/>
		<param name="effect_scale" value="0.2"/>
		<param name="radialblurdist" value="5"/>
		<param name="max_explode_on_impact_angle" value="180"/>
		<param name="min_explode_on_impact_lifetime" value="0.1"/>
	</explosion>
	<params>
		<param name="lifetime" value="30"/>
		<param name="showtime" value="0.00"/>
		<param name="bulletType" value="2"/> <!-- Bullet Type 2 - Assault rifle bullet -->
		<param name="hit_type" value="rocket"/>
		<param name="giveable" value="1"/>
		<param name="accel" value="0"/>
		<param name="turn_speed" value="140"/>
		<param name="max_speed" value="60"/>
		<param name="cruise_altitude" value="0"/>
		<param name="launch_type" value="0"/>
	</params>
